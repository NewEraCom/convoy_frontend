{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:vue/vue3-essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "vue", "check-file"],
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "check-file/filename-naming-convention": [
      "error",
      {
        "src/**/*.{vue}": "PASCAL_CASE",
        "src/**/*.{js,ts}": "SNAKE_CASE"
      }
    ],
    "check-file/folder-naming-convention": [
      "error",
      {
        "src/modules/**/": "PASCAL_CASE"
      }
    ]   
  }
}
